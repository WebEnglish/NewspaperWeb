{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function () {

        $('#FormLayLaiPass').validate({
            rules: {

                NewPass: {
                    required: true,
                    minlength: 6
                },
                confirm: {
                    required: true,
                    equalTo: $('[name="NewPass"]')
                }
            },
            messages: {

                NewPass: {
                    required: 'Yêu cầu nhập password.',
                    minlength: 'Mật khẩu của bạn ít nhất 6 kí tự.'
                },
                confirm: {
                    required: 'Nhập lại Password.',
                    equalTo: 'Password không giống nhau.'
                },
            },

            errorElement: 'small',
            errorClass: 'col help-block text-danger',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            }

        });
    })
</script>
{{/section}}

<form method="POST" id="FormLayLaiPass">
    <div style="padding-top:100px" class="container col-md-5 text-black">
        <div class="an-shadow mb-5 bg-white rounded ">
            <div
                style="height: 50px; padding: 10px;text-align: center; border-bottom:1px solid rgb(31, 211, 166); color: rgb(0, 0, 0); font-weight: bold;">
                <h4 class="modal-title" style="color: rgb(0, 68, 57)"><b>MẬT KHẨU MỚI</b></h4>
            </div>
            <br>
            <div class="mr-4">
                <div class="form-group col-md-12">
                    <div style="float:left">
                        <span class="d-flex justify-content-end">
                            <label for="pass" class="text-center mt-2 text-black">Nhập password mới: </label>
                        </span>
                    </div>
                    <div class="col-md-12">
                        <input id="pass" name="NewPass" placeholder="password" class="form-control col-md-12"
                            type="password">
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div style="float:left">
                        <span class="d-flex justify-content-end">
                            <label for="pass" class="text-center mt-2 text-black">Nhập lại password mới: </label>
                        </span>
                    </div>
                    <div class="col-md-12">
                        <input id="pass" name="confirm" placeholder="password" class="form-control col-md-12"
                            type="password">
                    </div>
                </div>
                
            </div>
            <!-- Modal footer -->
            <div class="modal-footer" style="justify-content: center;border-top: 0px">
                <button type="submit" style="border-radius: 20px; cursor: pointer;" class="btn an-btn"
                    data-dismiss="modal">Tạo mới</button> &nbsp;
            </div>
        </div>
    </div>
</form>