<div style="padding-top:100px" class="container col-md-5 text-black">
	<div class="an-shadow mb-5 bg-white rounded ">
		{{#if err_message}}
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			{{err_message}}
		</div>
		{{/if}}
		<form action="/account/login" method="POST" style="height: 350px" class="pl-3 pr-3">
			<div
				style="height: 50px; padding: 10px;text-align: center; border-bottom:1px solid rgb(31, 211, 166); color: rgb(0, 0, 0); font-weight: bold;">
				<h4 class="modal-title" style="color: rgb(0, 68, 57)"><b>Đăng Nhập</b></h4>
			</div>
			<br>
			<div class="mr-4">
				<div class="form-group col-md-12" style="display:flex; flex-direction:row">
					<span class="col-md-3 d-flex justify-content-end">
						<label for="TK" class="text-center mt-2 text-black"  >Email: </label>
					</span>
					<input id="TK" class="form-control col-md-9"  name="email" placeholder="lchung@gmail.com"
						type="text">
				</div>
				<br>
				<div class="form-group col-md-12" style="display:flex; flex-direction:row">
					<span class="col-md-3 d-flex justify-content-end">
						<label for="pass" class="text-center mt-2 text-black">Mật khẩu: </label>
					</span>
					<input id="pass" name="password" placeholder="password" class="form-control col-md-9"
						type="password">
				</div>
			</div>
			<!-- Modal footer -->
			<div class="modal-footer" style="justify-content: center;border-top: 0px">
				<button type="submit" style="border-radius: 20px; cursor: pointer;" class="btn an-btn"
					data-dismiss="modal">Đăng
					nhập</button> &nbsp;
			</div>
			<div class="mb-5 mr-3 d-flex justify-content-end">
				<a href="" style="border: 0px; background-color: transparent;cursor: pointer;"><u>Quên mật
						khẩu? </u></a>
			</div>
		</form>
	</div>
</div>