

{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function () {
        $('#formEdit').validate({
            rules: {
                tencm: {
                    required: true
                }
            },
            messages: {
                tencm: {
                    required: '&emsp;&emsp;&ensp;*Nhập chính xác tên chuyên mục con!'
                }
            },
            errorElement: 'p',
            errorClass: 'text-danger',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            }

        })
    })
</script>
{{/section}}


<div>
    <h1>Chỉnh sửa chuyên mục</h1>
    <form method="POST" id="formEdit" action="/admin/QuanLiChuyenMuc/update">
        <div class="m-5">
            <div class=" d-flex flex-nowrap col-md-12" style="margin-bottom: 20px">
                <label class="col-md-2">ID chuyên mục:</label>
                 <input readonly type="text" name="id" style="height:30px; width:200px" class="col-md-6" value="{{this.catec.idChuyenMuc}}"
                    placeholder="ID chuyên mục...">
            </div>
            <div class='d-flex flex-nowrap col-md-12 mb-5'>
                <label class="col-md-2">Tên chuyên mục: </label>
                <input autofocus type="text" name="tencm" style="height:30px; width:200px" class=" col-md-6" value="{{this.catec.TenCM}}"
                    placeholder="Tên chuyên mục...">
            </div>
            <div class=''>
                <div class="col-md-12" style="margin-top:20px">
                    <label class="col-md-2">Người quản lí:</label>
                    <span class=" col-md-6" style="padding-left: 30px">
                        <select name="manager" style="height:30px; width:200px">
                        {{#each this.member}}
                        <option {{#if isSelected}} selected {{/if}} value="{{idThanhVien}}">{{HoTen}}</option>
                        {{/each}}
                    </select>
                    </span>
                </div>
                <div {{#if kiemtra}} hidden {{/if}}  class="col-md-6" style="margin-top:20px">
                    <label class="col-md-4">Loại chuyên mục:</label>
                    <span class=" col-md-6" style="padding-left: 31px">
                        <select name="cate" style="height:30px; width:200px;">
                        {{#each this.allCate}}
                        <option {{#if isSelec}} selected {{/if}} value="{{idChuyenMuc}}">{{TenCM}}</option>
                        {{/each}}
                    </select>
                    </span>
                </div>
            </div>
            <div class="col-md-12" style="margin-top:20px">
                <a class="btn btna" href="/admin/QuanLiChuyenMuc"
                    style="margin-left:none !important;height:35px;background-color:#2A3F54; color:floralwhite; width:100px"
                    type="button" id="Quaylai"><i class="fa fa-backward" aria-hidden="true">&nbsp;</i>Quay lại</a>
                <button class="btn btna btn-primary"
                    style="height:35px;background-color:#2A3F54; color:floralwhite; width:100px" type="submit"
                    id="Them">
                    <i class="fa fa-check" aria-hidden="true">&nbsp;</i>Lưu lại</button>
            </div>
        </div>


    </form>
</div>